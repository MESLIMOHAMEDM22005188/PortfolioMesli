# ----------------------------
# DATABASE — fallback intelligent
# Priorité: DATABASE_URL (ex: postgres://...) > MySQL via env (DB_NAME) > sqlite local (db.sqlite3)
# ----------------------------
DATABASE_URL = os.environ.get('DATABASE_URL') or config('DATABASE_URL', default='')

if DATABASE_URL:
    # dj-database-url doit être installé si tu utilises DATABASE_URL
    import dj_database_url
    DATABASES = {'default': dj_database_url.parse(DATABASE_URL, conn_max_age=600)}
else:
    DB_NAME = config('DB_NAME', default='')
    if DB_NAME:
        # config MySQL via variables d'environnement (DB_NAME, DB_USER, DB_PASSWORD, DB_HOST, DB_PORT)
        DATABASES = {
            'default': {
                'ENGINE': 'django.db.backends.mysql',
                'NAME':   DB_NAME,
                'USER':   config('DB_USER', default=''),
                'PASSWORD': config('DB_PASSWORD', default=''),
                'HOST':   config('DB_HOST', default='127.0.0.1'),
                'PORT':   config('DB_PORT', cast=int, default=3306),
                'OPTIONS': {'init_command': "SET sql_mode='STRICT_TRANS_TABLES'"},
            }
        }
    else:
        # fallback sqlite (utile pour dev local et démos)
        DATABASES = {
            'default': {
                'ENGINE': 'django.db.backends.sqlite3',
                'NAME': BASE_DIR / 'db.sqlite3',
            }
        }

